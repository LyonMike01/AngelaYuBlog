

<%- include("partials/header") %>

<h1>Compose</h1>
<form action="/compose" method="POST">
  <div class="form-group mb-3"> 
    <label>Title</label>
    <input type="text" class="form-control" name="postTitle" placeholder="Enter Title"/>

    <label>Post</label>
    <textarea
      type="text"
      class="form-control"
      placeholder="Enter Content"
      name="postBody"
      rows="5"
    ></textarea>
  </div>
  <button class="btn btn-info" type="submit" name="button">Publish</button>
</form>

